<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:logo), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <li><%= link_to t(:help), help_path %></li>
        <% if logged_in? %>
          <% if logged_admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "admin_product" %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
              <li><%= link_to t(:add_product), new_admin_product_path %></li>
              <li><%= link_to t(:showall_product), admin_products_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t "admin_catego" %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
              <li><%= link_to t(:add_catego), new_admin_category_path %></li>
              <li><%= link_to t(:showall_catego), admin_categories_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t "managerment"%> 
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
                <li><%= link_to t(:admin_suggest), admin_suggests_path %></li>
                <li><%= link_to t(:userprofile), admin_users_path %></li>
                <li><%= link_to t(:logout), logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>          
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t "account"%> 
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:cart), "#" %></li>
                <li><%= link_to t(:profile), current_user %></li>
                <li><%= link_to t(:settings), edit_user_path(current_user) %></li>
                <li><%= link_to t(:suggest), new_suggest_path %></li>
                <li class="divider"></li>
                <li><%= link_to t(:logout), logout_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
          <% else %>
          <li><%= link_to t(:login), login_path%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
